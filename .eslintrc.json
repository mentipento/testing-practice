{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off"
  },
  "overrides": [
    {
      "files": [
        "webpack.common.js",
        "webpack.dev.js",
        "webpack.prod.js",
        "webpack.config.js"
      ],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    },
    {
      "files": [
        "tests/**/*"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
